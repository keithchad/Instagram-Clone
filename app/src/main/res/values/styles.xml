<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/colorTextLightTheme</item>
        <item name="backgroundColor">@color/colorBackgroundLightTheme</item>
        <item name="searchBarColor">@color/colorSearchBarLightTheme</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="text_color">@color/colorTextDarkTheme</item>
        <item name="backgroundColor">@color/colorBackgroundDarkTheme</item>
        <item name="searchBarColor">@color/colorSearchBarDarkTheme</item>
    </style>

    <style name="FullScreenDialogTheme" parent="Theme.MaterialComponents.DialogWhenLarge">
        <item name="android:statusBarColor">#0C0C0C</item>
        <item name="android:navigationBarColor">#0C0C0C</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

</resources>